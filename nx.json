{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "cached:build:esbuild",
          "cached:build:definitions",
          "cached:build:doc:extract",
          "cached:build:doc",
          "cached:build:locales",
          "cached:build:stencil",
          "cached:build:storybook:assets-list",
          "cached:build:storybook",
          "cached:validate:storybook",
          "cached:validate:definitions",
          "cached:test:unit"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "prod": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "e2e": {
      "dependsOn": ["build"]
    },
    "lint:check": {},
    "lint:fix": {},
    "publish:npm:release": {
      "dependsOn": ["build"]
    },
    "publish:npm:prerelease": {
      "dependsOn": ["build"]
    },
    "publish:sfdx": {
      "dependsOn": ["build"]
    },
    "promote:sfdx": {
      "dependsOn": ["build"]
    }
  },
  "defaultBase": "master"
}
