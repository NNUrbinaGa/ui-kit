{
  "name": "@coveo/bueno",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/coveo/ui-kit.git",
    "directory": "packages/bueno"
  },
  "main": "./dist/bueno.js",
  "module": "./dist/bueno.esm.js",
  "browser": {
    "./dist/bueno.js": "./dist/browser/bueno.js",
    "./dist/bueno.esm.js": "./dist/browser/bueno.esm.js"
  },
  "types": "./dist/definitions/index.d.ts",
  "license": "Apache-2.0",
  "version": "0.34.1",
  "files": [
    "dist/"
  ],
  "scripts": {
    "start": "concurrently \"npm run typedefinitions -- -w\" \"node esbuild.js dev\"",
    "build": "npm run typedefinitions & node esbuild.js",
    "typedefinitions": "tsc -d --emitDeclarationOnly --declarationDir dist/definitions",
    "clean": "rimraf -f -r dist/*",
    "test": "jest",
    "test:watch": "jest --watch --colors --no-cache",
    "npm:publish": "node ../../scripts/deploy/publish.js",
    "npm:publish:alpha": "node ../../scripts/deploy/publish.js alpha",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "jest": "26.6.3",
    "lint-staged": "^12.1.7",
    "ts-jest": "26.5.6"
  },
  "lint-staged": {
    "**/*.{js,ts?(x)}": [
      "eslint"
    ],
    "**/*.{html,json,xml,css,scss,yml,md}": [
      "prettier --check"
    ]
  }
}
