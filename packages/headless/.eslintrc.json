{
  "ignorePatterns": [
    "dist"
  ],
  "rules": {
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": [
          "redux-mock-store"
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "webpack.*.js"
      ],
      "rules": {
        "node/no-unpublished-require": "off"
      }
    }
  ]
}